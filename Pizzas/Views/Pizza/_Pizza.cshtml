@model Pizzas.Models.PizzaViewModel
 
<hr />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.Pizza.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (ViewBag.enabled)
        {
            @Html.EditorFor(model => model.Pizza.Nom, new { htmlAttributes = new { @class = "form-control" } })
        } else
        {
            @Html.EditorFor(model => model.Pizza.Nom, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        }
            @Html.ValidationMessageFor(model => model.Pizza.Nom, "", new { @class = "text-danger" })
        </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.IdPate, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (ViewBag.enabled)
        {
            @Html.DropDownListFor(model => model.IdPate, Model.Pates.Select(p => new SelectListItem() { Text = p.Nom, Value = p.Id.ToString() }), new { @class = "form-control" })
        }
        else
        {
            @Html.DropDownListFor(model => model.IdPate, Model.Pates.Select(p => new SelectListItem() { Text = p.Nom, Value = p.Id.ToString() }), new { @class = "form-control", @disabled = "disabled" })
        }
        @Html.ValidationMessageFor(model => model.IdPate, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Ingredients, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (ViewBag.enabled)
        {
            @Html.ListBoxFor(model => model.IdIngredients, Model.Ingredients.Select(p => new SelectListItem() { Text = p.Nom, Value = p.Id.ToString() }), new { @class = "form-control" })
        } else
        {
            @Html.ListBoxFor(model => model.IdIngredients, Model.Ingredients.Select(p => new SelectListItem() { Text = p.Nom, Value = p.Id.ToString() }), new { @class = "form-control", @disabled = "disabled" })
        }
        @Html.ValidationMessageFor(model => model.IdIngredients, "", new { @class = "text-danger" })
    </div>
</div>

